<?php if (is_front_page() || get_page_template_slug() == 'template-home-page.php'){ ?>

  // Pop up
  var popupBanner = "rj-popup-banner";
  var popup = document.getElementById("popup-banner");

  if (document.cookie.includes(popupBanner)) {
    // Accepted cookie
    popup.style.display = "none";
    console.log(popupBanner + " accepted");
  } else {
    // No cookie
    requestAnimationFrame(() => {
      setTimeout(function() {
        popup.style.display = "flex";
    
        popup.addEventListener("click", () => {

          var date = new Date();
          document.cookie = popupBanner + "=accept; expires=" + date.toGMTString() + "; Max-Age=86400; domain=." + location.hostname.split('.').reverse()[1] + "." + location.hostname.split('.').reverse()[0] + "; Path=/;SameSite=Lax;";
          
          popup.style.display = "none";
          console.log(popupBanner + " closed");
          
          event.preventDefault();
          event.stopPropagation();
          event.stopImmediatePropagation();
        });
      }, 500);
    })
  }

<?php } ?>
